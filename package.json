{
  "name": "@mingsumsze/design-system",
  "version": "0.0.0",
  "description": "My personal design system",
  "main": "index.js",
  "scripts": {
    "dev-types-ts": "npm run clean-types && npx tsc --project tsconfig.dev.json --watch",
    "dev-types-rollup": "rollup --config rollup.dts.config.js --watch",
    "build": "npm run clean && npx tsc --project tsconfig.json && rollup --config rollup.config.js && npm run build-types",
    "build-types": "npm run clean-types && npx tsc --project tsconfig.dev.json && rollup --config rollup.dts.config.js",
    "clean": "rm -rf dist",
    "clean-types": "rm -rf types",
    "build-esm": "npm run clean-esm && npx babel src --out-dir esm --extensions \".tsx\" --ignore \"src/index.tsx\" && npx babel src/**/font.d.ts --out-dir esm --copy-files",
    "clean-esm": "rm -rf esm",
    "storybook": "npx start-storybook -p 6006",
    "test": "npx test-storybook",
    "postinstall": "husky install && npx husky add .husky/pre-commit \"\"",
    "test-storybook:ci": "concurrently --kill-others-on-fail --success last \"npx build-storybook --quiet && http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && npx test-storybook\""
  },
  "author": "mingsumsze",
  "license": "MIT",
  "types": "types/index.d.ts",
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "framer-motion": "^7.2.0",
    "phosphor-react": "^1.4.1",
    "react-bootstrap-icons": "^1.8.4",
    "react-is": "^18.2.0",
    "react-markdown": "^8.0.3",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@emotion/babel-plugin": "^11.10.2",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-multi-entry": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@rollup/plugin-url": "^7.0.0",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack4": "^6.5.10",
    "@storybook/manager-webpack4": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/test-runner": "^0.6.3",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^18.0.17",
    "babel-loader": "^8.2.5",
    "husky": "^8.0.1",
    "jest": "^29.0.0",
    "lerna": "^5.4.3",
    "postcss": "^8.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.77.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-import-css": "^3.0.3",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^6.5.10",
    "storybook-react-context": "^0.6.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
